<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowIndividualDoctor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="340sp"
        android:layout_height="260sp"
        android:layout_margin="10sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="@drawable/image_bg">

        <ImageView
            android:id="@+id/doctorLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fieldsLayoutIndividual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_bg_white"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageLayout">

        <TextView
            android:id="@+id/nameFieldIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10sp"
            android:text="Name"
            android:gravity="center"
            android:background="@drawable/show_individual_fields"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/detailsFieldIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/show_individual_fields"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/appointmentFieldIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Date"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/show_individual_fields"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/phoneFieldIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/show_individual_fields"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/emailFieldIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/show_individual_fields"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@android:drawable/ic_menu_call" />

</android.support.design.widget.CoordinatorLayout>